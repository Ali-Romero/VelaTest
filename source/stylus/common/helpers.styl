.wrapper
  max-width: 340px
  width 100%
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 760px
    margin: 0 auto
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 970px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1400px

h1,
h2,
h3,
h4
  font-family: "TenorSans-Regular"
  font-weight: 400

.color-white
  color: $color-white
.color-black
  color: $color-black
.color-blue
  color: $color-blue
.color-grey
  color: $color-grey
.color-grey-2
  color: $color-grey-2
.color-grey-3
  color: $color-grey-3
.color-grey-2
  color: $color-grey-2

.tap-color
  -webkit-tap-highlight-color: transparent
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
